    <div class="container body-content" style="margin-top: 100px;">

        <div class="container">
            <!-- Example row of columns -->
            <div class="row">

            @foreach (var d in Model.Models)
            {
                <div class="col-md-4">
                    <h2>@d.AddInDomain</h2>
                    <p>@d.Description </p>
                    <p><a class="btn btn-default" href="\Addinsdomain\AddInsService\addinDomain?id=@d.ID" role="button">View details »</a></p>
                </div>
            }
            </div>

            <hr>
            <button type="submit" class="btn btn-primary" id="reload" onclick="ReloadAll()">Reload</button>
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#addModal">Append</button>
            <hr>
            <footer>
                <p>© 2016 Company, Inc.</p>
            </footer>
        </div>


